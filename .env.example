# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Database
DATABASE_URL=your_database_url_here
# Recommended for Supabase deployments (fallbacks used by codebase)
SUPABASE_DB_URL=your_supabase_connection_string_here
DIRECT_URL=your_direct_connection_string_here
# Enable SSL for Supabase (server/db.ts detects supabase.co or PG_SSL=1)
PG_SSL=1

# Supabase API (used by storage, auth, etc.)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Supabase Storage
SUPABASE_BUCKET_PROFILE_PHOTOS=profile-photos
SUPABASE_SIGNED_URLS=0

# Session Security (REQUIRED - generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# Redis (optional in development, required in production)
# Format: redis://[:password@]host[:port][/db-number]
REDIS_URL=redis://localhost:6379

# Sentry Error Tracking (optional in development, recommended in production)
# Get your DSN from https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here

# Google OAuth (for user authentication)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Google Admin / Workspace (Directory API)
# Preferred: Service Account with Domain-Wide Delegation (DWD)
# Paste full JSON string below (escape newlines if needed)
GOOGLE_SERVICE_ACCOUNT_JSON=your_service_account_json_here
# Admin user to impersonate for DWD
# NOTE: Subject email is currently hardcoded in `server/google-admin.ts` and not read from env.
#       Set this value for documentation and Doppler, and consider updating the code to read it.
GOOGLE_ADMIN_EMAIL=admin@yourdomain.com

# Fallback: OAuth2 user credentials with automatic refresh
GOOGLE_CLIENT_ID_OS=your_google_client_id_here
GOOGLE_CLIENT_SECRET_OS=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here

# Legacy (not used by current code)
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Slack Integration
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_CHANNEL_ID=your_slack_channel_id_here

# CORS / Frontend
FRONTEND_URL=http://localhost:5173
# Comma-separated allowlist (optional in production)
CORS_ALLOW_ORIGINS=

# Airtable Integration
AIRTABLE_TOKEN=your_airtable_token_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# OpenAI Integration
OPENAI_API_KEY=your_openai_api_key_here